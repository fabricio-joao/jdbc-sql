			ps.setString(2, "tales@gmail.com");
			ps.setDate(3, new java.sql.Date(sdf.parse("13-08-2022").getTime()));
			ps.setDouble(4, 3000);
			ps.setInt(5, 4);

			int linhasAlteradas = ps.executeUpdate();
			System.out.println("Pronto! Qual linhas afetada: " + linhasAlteradas);*/
		}

		catch (SQLException e) {
			e.printStackTrace();
		}

