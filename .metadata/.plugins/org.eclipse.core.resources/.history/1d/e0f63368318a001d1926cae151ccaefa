package cursojdbc.conexaobancosdedados.app;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.text.ParseException;
import java.text.SimpleDateFormat;

import cursojdbc.conexaobancosdedados.ConexaoBancoDados;

public class Programa {

	public static void main(String[] args) throws SQLException {
	
		SimpleDateFormat sdf = new SimpleDateFormat("dd-MM-yyyy");
		Connection conexao = null;
		PreparedStatement ps = null;
		
		try {
		     conexao = ConexaoBancoDados.retornaConexao();
		     ps = conexao.prepareStatement(
		    		 "insert into Departamentos "
		     		+ "(Id, Setor)"
		     		+ "values "
		     		+ "(?, ?)");
		     
		     ps.setInt(1, 2);
		     ps.setString(2, "Moda");
		     /*ps.setString(2, "lai@gmail.com");
		     ps.setDate(3, new java.sql.Date(sdf.parse("11-11-1995").getTime()));
		     ps.setDouble(4, 2000);
		     ps.setInt(1, 2);*/
		     
		     int linha = ps.executeUpdate();
		     System.out.println("Prontos! Total de linhas alteradas: " + linha);
		}
		/*catch(ParseException e) {
			e.printStackTrace();
		}*/
		finally {
			ConexaoBancoDados.fecharStatement(ps);
			ConexaoBancoDados.fecharConexao();
		}
	}

}
